}
.details {
  height: 360rpx;
  background: linear-gradient(to bottom,#F73D57,#F5F5F5);
}
.text {
  padding: 40rpx 0 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 90rpx;
}
.powdered-box {
  position: relative;
  height: 240rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
.imgs {
  height: 100%;
  width: 212rpx;
}
.add {
  width: 60rpx;
  height: 60rpx;
  background-color: #F73D57;
  border-radius: 50%;
