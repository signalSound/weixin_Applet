}
.vipReduce {
  background-color: #21212B;
  height: 80rpx;
  border-radius: 10rpx;
  padding-left: 70rpx;
  box-sizing: border-box;
}
.reduceMon {
  height: 100%;
  background-color: #FFCD77;
  width: 180rpx;
}
.cells {
  border-bottom: 1px solid #f5f5f5;
  padding: 10rpx 0;
}
.borders {
  background-color: #F5F5F5;
  height: 20rpx;
}
.shopCart {
  height: 120rpx;
  background-color: #eee;
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  line-height: 1;
}
.btna button{
  width: auto !important;
  padding: 0;
  font-weight: 500;
  line-height: 1;
  font-size: 24rpx;
  color: #999;
}
.shopCart button{
  width: auto !important;
  padding: 0;
