}
image{
  margin: 0 auto;
}
.addCart {
  width: 219rpx;
  height: 100%;
  background-color: #21212B;
}
.bug {
  width: 219rpx;
  height: 100%;
  background-color: #F73D57;
}
.phone {
  width: 100rpx;
  height: 100%;
}
.mask {
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  top: 0;
  z-index: 10;
  height: 100%;
}
.popup-select { 
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 99999;
  background-color: #fff;
}

.popup-select-img {
  width: 140rpx;
  height: 140rpx;
  background: #eee;
  margin-right: 30rpx;
  border-radius: 5rpx;
} 
.popup-select-box {
  padding: 30rpx;
}
.age-select {
  padding-bottom: 30rpx;
  border-bottom: 1px solid #F5F5F5;
}
.age-select view{
  padding: 0 15rpx;
  height: 50rpx;
  border-radius: 10rpx;
  line-height: 50rpx;
  background-color: #F5F5F5;
  text-align: center;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.age-select view:nth-last-of-type(1){
  margin-right: 0;
}
.selected {
  background-color: #F5F5F5;
  color: #bbb;
}

.comfire-btn {
  height: 120rpx;
  background-color: #F73D57;
  line-height: 99rpx;
  text-align: center;
  margin-top: 150rpx;
}
.carts {
  height: 100%;
}
.cart {
  position: relative;
  /* height: 100%; */
}

.cart .dot {
  background: #F73D57;
  border-radius: 50%;
  line-height: 25rpx;
  position: absolute;
  right: -10rpx;
  top: -5rpx;
  padding: 3rpx 8rpx;
  text-align: center;
}
.add {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  /* background-color: #F73D57; */
  border-radius: 50%;
}

.good_title {
  height: 99rpx;
  line-height: 99rpx;
  border-bottom: 1px solid #f5f5f5;
  position: relative;
}
.close{
  position: absolute;
  right: 40rpx;
  top: 5rpx;
}
.good_title  image {
  position: absolute;
  width: 28rpx;
  height: 28rpx;
  right: 30rpx;
  top: 15rpx;
}
.buy-num {
  padding: 26rpx 0;
