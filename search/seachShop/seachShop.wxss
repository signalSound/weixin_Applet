.search {
  position: relative;
}
.invite {
  width: 100rpx;
  text-align: center;
  margin-right: 10rpx;
}
.bussBox {
  text-align: center;
  padding: 0 20rpx;
}
.img {
  width: 40rpx;
  height: 40rpx;
  background-color: pink;
  margin: 0 auto;
  text-align: center;
}
.inputs {
  height: 68rpx;
  padding-left: 70rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  width: 95%;
}
.sousuo {
  position: absolute;
  top: 21rpx;
  left: 21rpx;
}
.bImg {
  margin-bottom: 10rpx;
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  background-color: blue;
}
.imgs {
  height: 100%;
  /* height: 280rpx; */
  background-color: red;

}
.imgss {
  height: 100%;
  /* height: 280rpx; */
  background-color: green;
}
.powdered {
  height: 100vh;
  background-color: #F5F5F5;
}
.powdered .powdered-box {
  position: relative;
  height: 240rpx;
  border-radius: 10rpx;
}
.powdered .imgs {
  height: 100%;
  width: 212rpx;
  background-color: pink;
}
.activity {
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  background-color: #BFD1F9;
}
.add {
  width: 60rpx;
  height: 60rpx;
  background-color: #F73D57;
  border-radius: 50%;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
.cart {
  position: fixed;
  top: 50%;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  transform: translateY(40rpx);
  background-color: #ccc;
}

.nums view {
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  margin: 20rpx 30rpx;
}

.records {
  height: 86rpx;
}

.history_item{
  font-size: 24rpx;
  color: #ddd;
  border-radius: 5rpx;
  border: 1rpx solid #ddd;
  padding: 7rpx;
  margin-right: 35rpx;
  margin-bottom: 30rpx;
}
.bord{
  position: relative;
}
.bord::after {
  content: '';
  position: absolute;
  width: 30rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #F73D57;
  bottom: -20rpx;
  left: 0;
}