page{
  padding-bottom: 120rpx;
}
.select {
  margin-left: 30rpx;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #ddd;
  border-radius: 50%; 
  position: relative;
}
.selected {
  margin-left: 30rpx;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #F73D57;
  border-radius: 50%;
  position: relative;
}
.selected::after {
  content: '';
  position: absolute;
  display: block;
  width: 28rpx;
  height: 28rpx;
  background-color: #F73D57;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 50%;
}
.powdered .powdered-box {
  position: relative;
  height: 210rpx;
  border-top: 1px solid #f5f5f5;
}
.powdered powdered-box:nth-last-of-type(1) {
  border-bottom: 1px solid #f5f5f5;
}
.powdered .imgs {
  height: 100%;
  width: 160rpx;
  height: 160rpx;
}
.add {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
}
.addBuss {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  line-height: 1;
}
.cart {
  position: fixed;
  top: 50%;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  transform: translateY(40rpx);
  background-color: #ccc;
}
.settlement {
  line-height: 1;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  border-top: 1px solid #f5f5f5;
  height: 100rpx;
  height: 130rpx;
}
.settlement-text {
  height: 100rpx;
  width: 200rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #F73D57;
}